{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/FieldConstExample",
    "definitions": {
        "FieldConstExample": {
            "properties": {
                "type": {
                    "type": "string",
                    "description": "String constant",
                    "const": "example"
                },
                "version": {
                    "type": "integer",
                    "description": "Integer constant",
                    "const": 42
                },
                "enabled": {
                    "type": "boolean",
                    "description": "Boolean constant",
                    "const": true
                },
                "ratio": {
                    "type": "number",
                    "description": "Float constant",
                    "const": 3.14
                },
                "name": {
                    "type": "string",
                    "description": "Regular field without const"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Field Const Example",
            "description": "This message demonstrates the use of the const field option"
        }
    }
}